<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="10"
        android:weightSum="10"
        android:padding="@dimen/_16sdp"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/logins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                android:layout_marginLeft="@dimen/_20sdp"
                android:textSize="@dimen/_15sdp"
                android:layout_alignParentLeft="true"/>
            <ImageView
                android:id="@+id/line"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/line_v"
                android:layout_centerHorizontal="true"></ImageView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/signups"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SignUp"
                    android:textColor="#103E65"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:textSize="@dimen/_15sdp" />
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_16sdp">
            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Usersname"
                android:textCursorDrawable="@null"
                android:backgroundTint="#103E65"
                android:textColorHint="#103E65"></EditText>
            <EditText
                android:id="@+id/emails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:textCursorDrawable="@null"
                android:backgroundTint="#103E65"
                android:textColorHint="#103E65"
                android:layout_marginTop="@dimen/_10sdp"></EditText>
            <EditText
                android:id="@+id/passwords"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:textColorHint="#103E65"
                android:backgroundTint="#103E65"
                android:textCursorDrawable="@null"
                android:layout_marginTop="@dimen/_10sdp"></EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">
            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:background="#103E65"
                android:id="@+id/btn_signup"
                android:text="SignUp"
                android:textColor="#fff"></Button>
        </LinearLayout>

    </LinearLayout>