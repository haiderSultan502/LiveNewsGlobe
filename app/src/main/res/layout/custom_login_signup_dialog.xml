<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/layout_bg">



    <RelativeLayout
        android:id="@+id/dialog_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_6sdp">
        <View
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_5sdp"
            android:background="#103E65" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/_16sdp">
        <TextView
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textColor="#103E65"
            android:layout_marginLeft="@dimen/_20sdp"
            android:textSize="@dimen/_15sdp"
            android:layout_alignParentLeft="true"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/line_v"
            android:layout_centerHorizontal="true"></ImageView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/signUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SignUp"
                android:layout_marginRight="@dimen/_20sdp"
                android:textSize="@dimen/_15sdp" />
        </LinearLayout>

    </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">
            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Usersname"
                android:textCursorDrawable="@null"
                android:backgroundTint="#103E65"
                android:textColorHint="#103E65"
                android:layout_marginBottom="@dimen/_10sdp"
                android:visibility="gone"></EditText>
            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:textCursorDrawable="@null"
                android:backgroundTint="#103E65"
                android:textColorHint="#103E65"></EditText>
            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:textColorHint="#103E65"
                android:backgroundTint="#103E65"
                android:textCursorDrawable="@null"
                android:layout_marginTop="@dimen/_10sdp"></EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_16sdp">
            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:background="#103E65"
                android:id="@+id/btn_login"
                android:text="LOGIN"
                android:textColor="#fff"></Button>
            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:background="#103E65"
                android:id="@+id/btn_signup"
                android:text="SignUp"
                android:textColor="#fff"
                android:visibility="gone"></Button>
        </LinearLayout>



    </LinearLayout>